<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/register.css">
    <title>Register</title>
</head>
<body>
    <div class="container" id="container">
        <!-- Personal Account Form -->
        <div class="form-container sign-up">
            <form class="personal-account" action="/auth/register-client" method="POST">
                <h1>Create Personal Account</h1>

                <input type="text" id="name" name="name" placeholder="Name" required>
                <input type="text" id="username" name="username" placeholder="Username" required>
                <input type="email" id="email" name="email" placeholder="Email" required>
                <input type="password" id="password" name="password" placeholder="Password" required>
                <input type="password" id="confirmpassword-client" name="confirmpassword" placeholder="Confirm Password" required>

                <div id="error-message" style="color: red;"></div>
                <a href="/login">Already Have an Account</a>
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Business Account Form -->
        <div class="form-container sign-in">
            <form action="/auth/register-business" method="POST">
                <h1>Register Your Company</h1>

                <input type="text" id="company_name" name="name" placeholder="Company Name" required>
                <input type="text" id="address" name="address" placeholder="Address" required>
                <input type="email" id="company_email" name="email" placeholder="Email" required>
                <input type="password" id="password" name="password" placeholder="Password" required>
                <input type="password" id="confirmpassword-buisiness" name="confirmpassword" placeholder="Confirm Password" required>

                <div id="error-message-business" style="color: red;"></div>
                <a href="/login">Already Registerd</a>
                <button type="submit">Register</button>
            </form>
        </div>

        <!-- Toggle Buttons -->
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Create Business Account</h1>
                    <p>Looking for business. Register your company today <br>
                        and start sharing your services.</p>
                    <button class="hidden" id="register">Click here</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Don't Have An Account</h1>
                    <p>Sign up today and discover a variety of cleaning services available in a click</p>
                    <button class="hidden" id="signup">Sign up</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/register.js"></script>
</body>
</html>
