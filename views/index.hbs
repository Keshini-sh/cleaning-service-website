<body>
    <!-- Header -->
    <header>
        <h1 class="logo">Clean Sweep</h1>
        <nav>
            <a href="#testimonials">Testimonials</a>
            <a href="#companies">Company Information</a>
            <a href="#signup">Sign Up</a>
